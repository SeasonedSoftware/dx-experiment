{
  "name": "monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Demo application showing how to share code between NextJS projects in a monorepo",
  "workspaces": [
    "domain-logic",
    "ui",
    "jobs"
  ],
  "scripts": {
    "migrate": "dotenv -e .env yarn w:domain migrate",
    "dev:domain": "dotenv -e .env yarn w:domain dev",
    "dev:jobs": "dotenv -e .env yarn w:jobs dev",
    "dev:ui": "dotenv -e .env yarn w:ui dev",
    "build": "yarn workspaces run build",
    "lint": "yarn lint:types && yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint ./",
    "lint:prettier": "prettier --check \"{**/*.js,**/*.jsx,**/*.ts,**/*.tsx}\"",
    "lint:types": "yarn workspaces run lint:types",
    "test": "dotenv -e .env yarn workspaces run test",
    "w:domain": "yarn workspace domain-logic",
    "w:jobs": "yarn workspace jobs",
    "w:ui": "yarn workspace ui"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.0",
    "@types/react": "17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "@prisma/client": "^2.26.0",
    "fp-ts": "^2.10.5",
    "lodash": "^4.17.21",
    "prisma": "^2.26.0",
    "superjson": "^1.7.4",
    "zod": "^3.5.1"
  }
}
